{
  "manifest_version": 3,
  "default_locale": "en",

  "name": "__MSG_extName__",
  "description": "__MSG_extDesc__",
  "version": "1.27.5",

  "action": {
    "default_icon": {
      "19": "icons/icon_512.png",
      "38": "icons/icon_512.png"
    }
  },

  "icons": {
    "16": "icons/icon_512.png",
    "48": "icons/icon_512.png",
    "128": "icons/icon_512.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "js": ["script.js"],
      "css": ["style.css"],
      "matches": [
        "*://*.instagram.com/*",
        "*://*.cdninstagram.com/*"
      ]
    }
  ],

  "permissions": [
    "tabs",
    "downloads",
    "scripting"
  ],

  "host_permissions": [
    "*://*.instagram.com/*",
    "*://*.cdninstagram.com/*",
    "*://*.fbcdn.net/*"
  ]
}
